	"[typescriptreact]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit"
		}
	},
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": "explicit"
		}
	},
	"tailwindCSS.experimental.classRegex": [
		["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],

		"tw`([^`]*)", // tw`...`
		"tw=\"([^\"]*)", // <div tw="..." />
		"tw={\"([^\"}]*)", // <div tw={"..."} />
		"tw\\.\\w+`([^`]*)", // tw.xxx`...`
		"tw\\(.*?\\)`([^`]*)" // tw(Component)`...`
	]
}
